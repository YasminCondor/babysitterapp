<p id="notice"><%= notice %></p>

<h1>Listing Schedules</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>State</th>
      <th>Babysitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.date %></td>
        <td><%= schedule.state %></td>
        <td><%= schedule.babysitter.name %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path ,:class => "btn btn-default"%>
