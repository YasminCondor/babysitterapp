<p id="notice"><%= notice %></p>

<h1>Listing Babysitters</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Phonenumber</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Document</th>
      <th>Birth Date</th>
      <th>District</th>
      <th>Address</th>
      <th>Startate</th>
      <th>Resume</th>
      <th>Maxcountchildren</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @babysitters.each do |babysitter| %>
      <tr>
        <td><%= babysitter.id%> </td>
        <td><%= babysitter.phonenumber %></td>
        <td><%= babysitter.firstname %></td>
        <td><%= babysitter.lastname %></td>
        <td><%= babysitter.document %></td>
        <td><%= babysitter.birthdate %></td>
        <td><%= babysitter.district %></td>
        <td><%= babysitter.address %></td>
        <td><%= babysitter.startdate %></td>
        <td><%= babysitter.resume %></td>
        <td><%= babysitter.maxcountchildren %></td>
        <td><%= link_to 'Show', babysitter %></td>
        <td><%= link_to 'Edit', edit_babysitter_path(babysitter) %></td>
        <td><%= link_to 'Destroy', babysitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



